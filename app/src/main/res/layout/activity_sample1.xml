<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <vn.vietmap.vietmapsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:vietmap_cameraTargetLat="52.039176"
        app:vietmap_cameraTargetLng="5.550339"
        app:vietmap_cameraZoom="12"
        app:vietmap_enableTilePrefetch="true"
        app:vietmap_enableZMediaOverlay="true"
        app:vietmap_renderTextureMode="true"
        app:vietmap_renderTextureTranslucentSurface="true"
        app:vietmap_uiAttribution="false"
        app:vietmap_uiCompass="false"
        app:vietmap_uiDoubleTapGestures="true"
        app:vietmap_uiLogo="false"
        app:vietmap_uiRotateGestures="true"
        app:vietmap_uiScrollGestures="true"
        app:vietmap_uiTiltGestures="true"
        app:vietmap_uiZoomGestures="true" />

    <vn.vietmap.services.android.navigation.ui.v5.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        mapbox:layout_constraintTop_toBottomOf="@+id/mapView"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_navigation"
        android:tint="@android:color/white"
        android:visibility="visible"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>